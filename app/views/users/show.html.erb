<section id="users">
  <%= render 'shared/user_details', user: @user %>
</section>
<section id="bio">
   <h4 class="text-h4">Bio</h4>
<p class="post-p">
<%= @user.bio %>
</p>
</section>

<section id="recent_post">
<% @recent_posts.each_with_index do |post, index| %>
    <%= render 'shared/post_excerpt', post: post, index: index %>
  <% end %>
<button id="btn-posts"> <%= link_to 'See all posts', user_posts_path(@user) %></button>
 </section>